<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_picPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入图片路径" />

    <Button
        android:id="@+id/btn_uploadPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片上传" />

    <ListView
        android:id="@+id/lsv_picResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_filePath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入文件路径" />

    <Button
        android:id="@+id/btn_uploadFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文件上传" />

    <ListView
        android:id="@+id/lsv_fileResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>